<h1>Edit user</h1>
<%= form_with model: @user do |form| %>
   <div>
    <%= form.label :username, "Your user name here" %><br />
    <%= form.text_field :username %>
    <% @user.errors.full_messages_for(:username).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :email, "Your email here" %><br />
    <%= form.text_field :email, placeholder: "user@gmail.com" %>
    <% @user.errors.full_messages_for(:email).each do |message| %>
        <div><%= message %></div>
    <% end %>
  </div>
  
  <div>
    <%= form.label :password, "Your password here" %><br />
    <%= form.password_field :password %>
    <% @user.errors.full_messages_for(:password).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <%= form.submit "Edit" %>
<% end %>